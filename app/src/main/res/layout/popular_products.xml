<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="New"
            android:textAlignment="center"
            android:background="@drawable/blue_rounded"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.05"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Discount"
            android:textAlignment="center"
            android:background="@drawable/rounded"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.3"/>

        <TextView
            android:id="@+id/txt_popularName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testing"
            android:textStyle="bold"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.3"/>

        <TextView
            android:id="@+id/txt_popularType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testing"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_popularName"
            app:layout_constraintTop_toBottomOf="@id/txt_popularName"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/txt_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="20dp"
            android:textColor="#F44336"
            android:layout_marginTop="25dp"
            app:layout_constraintLeft_toLeftOf="@id/txt_popularType"
            app:layout_constraintTop_toBottomOf="@id/txt_popularType"
            />

        <TextView
            android:id="@+id/txt_popularPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testing"
            android:textSize="20dp"
            android:textColor="#F44336"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/txt_dollar"
            app:layout_constraintTop_toBottomOf="@id/txt_popularType"
            android:layout_marginTop="25dp"
            />

        <ImageView
            android:id="@+id/img_popularImage"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>